<div class="mt-header__menu">
    <a class="mt-header__menu-toggle" role="button" href="#">
        <svg class="icon icon-bars" role="presentation">
            <use xlink:href="#icon-bars"></use>
        </svg>
        <svg class="icon icon-times" role="presentation">
            <use xlink:href="#icon-times"></use>
        </svg>
    </a>
    <div class="mt-header__menu-wrap">
        <div class="mt-menu">
            <% for (var item in theme.menu){
                let isActive = is_current(theme.menu[item]); %>
            <a class="mt-menu__link <%= isActive ? 'active' : '' %>"
               href="<%- url_for(theme.menu[item]) %>"><%= item %></a>
            <% } %>
        </div>
    </div>
</div>
